{
  "adapters": {
    "multi-session": {
      "host": "${host}",
      "port": "${port}"
    },
    "tclpro": {
      "attach": {
        "pidSelect": "none"
      },
      "command": [
        "${gadgetDir}/tclpro/bin/debugadapter"
      ],
      "configuration": {
        "args": [
          "*${args}"
        ],
        "cwd": "${workspaceRoot}",
        "extensionDirs": [
          "${workspaceRoot}/.tclpro/extensions",
          "${HOME}/.tclpro/extensions"
        ],
        "target": "${file}",
        "tclsh": "tclsh"
      },
      "name": "tclpro",
      "type": "tclpro"
    }
  }
}